<div data-reveal-target="hide" class="transition-all -translate-x-80 duration-200 fixed top-0 left-0 z-50 flex flex-col h-full w-1/2 sm:w-1/6 bg-slate-800">
    <button data-action="click->reveal#hide">
    <div class="space-y-2 text-white pt-5 text-left pl-6">
      X
    </div>
  </button>
  <div class="flex flex-col gap-y-1 pt-12 w-full h-full">
    <%= link_to root_path, class: "px-4 mx-4 %s text-slate-300 rounded hover:bg-slate-500 active:bg-slate-500 focus:bg-slate-500 cursor-pointer" % [highlighted == "home" ? "bg-slate-500" : ""] do %>
      <div class="px-4">Home</div>
    <% end %>
    <%= link_to about_path, class: "px-4 mx-4 %s text-slate-300 rounded hover:bg-slate-500 active:bg-slate-500 focus:bg-slate-500 cursor-pointer" % [highlighted == "about" ? "bg-slate-500" : ""] do %>
      <div class="px-4">About</div>
    <% end %>
    <%= link_to ideas_path, class: "px-4 mx-4 %s text-slate-300 rounded hover:bg-slate-500 active:bg-slate-500 focus:bg-slate-500 cursor-pointer" % [highlighted == "ideas" ? "bg-slate-500" : ""] do %>
      <div class="px-4">Ideas</div>
    <% end %>
    <%= link_to now_path, class: "px-4 mx-4 %s text-slate-300 rounded hover:bg-slate-500 active:bg-slate-500 focus:bg-slate-500 cursor-pointer" % [highlighted == "now" ? "bg-slate-500" : ""] do %>
      <div class="px-4">Now</div>
    <% end %>
  </div>
</div>